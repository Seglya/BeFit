@model BeFit.Models.NewsViewModels.AddNewsViewModel


<div class="container">
    <div>
        <h2>@ViewData["Title"]</h2>

        <form method="post" asp-action="Edit" class="form-horizontal" enctype="multipart/form-data">

            <div class="form-group">
                <h4>News</h4>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group ">
                    <label class="col-md-2 control-label">Upload text file</label>
                    <div class="col-md-6">
                        <img id="img" src="@Url.Content(Model.Path)" height="100px" alt="photo" />
                        <input type="file" name="ITextFile" onchange="readURL(this);" />
                        <span asp-validation-for="ITextFile" class="text-danger"></span>

                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="Tag" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="Tag" class="form-control" />
                        <span asp-validation-for="Tag" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group ">
                    <label class="col-md-2 control-label">Upload image</label>
                    <div class="col-md-6">
                        <img id="img" src="@Url.Content(Model.ImagePath)" height="100px" alt="photo" />
                        <input type="file" name="IImageFile" onchange="readURL(this);" />
                       

                    </div>

                </div>
            </div>
            <div class="form-group col-md-12">
                <div class="col-md-3"></div>
                <input type="submit" value="Save" class="btn btn-default "/>|
                <a asp-action="Index" class="btn-danger">Back to List</a>
            </div>
        </form>


    </div>
</div>

@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}