@model BeFit.Models.UserProfileViewModels.IngestionViewModel
@{
    ViewData["Title"] = "Edit";
}
<script src="~/js/NewFieldFood.js" type="text/javascript"></script>



<div class="container">
    <br/>
    <br/>
    <form method="post" asp-controller="Meal" asp-action="Edit" class="form-horizontal" enctype="multipart/form-data">
        <div class="col-sm-1">
            <label> @Model.Name</label>
        </div>
        @{
            int i = -1;
            <div>
                <div class="col-sm-8">
                    @foreach (var item in Model.WeightOfFood)
                    {
                        i++;
                        if (i == 0)
                        {
                            <div class="form-group">
                                <div class="col-sm-4 nopadding">
                                    <div class="form-group">
                                        <select id="select" name="food[0][]" class="form-control" asp-items="ViewBag.FoodID">
                                            @if (item.Food == null)
                                            {
                                                <option value="">--Select food--</option>}
                                            else
                                            {
                                                <option selected="selected" value="@item.Food.FoodID">@item.Food.Name</option>}
                                        </select>
                                    </div>
                                </div>

                                <label class="col-md-2 control-label">Weight</label>

                                <div class="col-md-4">
                                    <div class="form-group">

                                        <div class="input-group">
                                            <input name="Weight[0][]" value="@item.Weight" class="form-control"/>
                                            <span class="input-group-btn">
                                                <button class="btn btn-success" type="button" onclick="ingestions_fields('0');"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> </button>

                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="form-group removeclass @i">
                                <div class="col-sm-4 nopadding">
                                    <div class="form-group">
                                        <select id="select" name="food[0][]" class="form-control" asp-items="ViewBag.FoodID">
                                            <option selected="selected" value="@item.Food.FoodID">@item.Food.Name</option>
                                        </select>
                                    </div>
                                </div>

                                <label class="col-md-2 control-label">Weight</label>

                                <div class="col-md-4">
                                    <div class="form-group">

                                        <div class="input-group">
                                            <input name="Weight[0][]" value="@item.Weight" class="form-control"/>
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" type="button" onclick="remove_ingestions_fields(@i);"> <span class="glyphicon glyphicon-minus" aria-hidden="true"></span> </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                    }
                    <p>
                        <div id="Ingections_Fields+0">
                        </div>
                    </p>
                    <div class="clear"></div>
                </div>
            </div>}
        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </form>
    <br/>
    <br/>
</div>