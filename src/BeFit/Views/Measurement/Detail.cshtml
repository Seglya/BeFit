@model List<BeFit.Models.UserProfileViewModels.DetailMeasureVeiwModel>
@{
    ViewData["Title"] = "Measurements";
}


<div class="container">
    <hr/>
  <table class="table">
        <thead>
        <tr>
            <th>
                <a asp-action="Detail" asp-route-sortOrder="@ViewBag.DateSortParam">
                    Date
                </a>
            </th>
            @foreach (var item in (IEnumerable<Measurement>) ViewData["MesuarementAll"])
            {
                <th>
                    <label>@item.Name</label>
                </th>
            }
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td >
                    @item.Date.Date
                </td>
                @foreach (var x in item.Measure.OrderBy(n => n.idMeasure))
                {
                    <td >
                        @Html.DisplayFor(modelItem => x.digit)
                    </td>
                }
                <td >
                    <a asp-action="Edit"  asp-route-date="@item.Date.Date" asp-route-id="@ViewData["userId"]">Edit</a> |
                    <a asp-action="Delete"  asp-controller="Measurement" asp-route-date="@item.Date.Date" asp-route-id="@ViewData["userId"]">Delete</a>
                </td>
            </tr>
        }
        </tbody>
       
    </table>
    <br/>
    <a asp-action="AddMeasurement" class="btn btn-default" asp-route-id="@ViewData["userId"]">Add new</a>|
    <a asp-controller="UserProfile" asp-action="Profile" class="btn btn-grey">Back to Profile</a>
    <br/>
    <br/>
    <br/>
    <br/>


</div>