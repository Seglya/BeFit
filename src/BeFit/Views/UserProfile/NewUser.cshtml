@model BeFit.Models.UserProfileViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "New User";
}
<div class="container">
    <h2>@ViewData["Title"].</h2>
    <form  asp-action="NewUser" method="post" class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SecondName" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <select asp-for="Sex" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input type="date" asp-for="DateOfBirth" class="form-control"/>
                <span asp-validation-for="DateOfBirth"  class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CurrentWeight" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="CurrentWeight" class="form-control" />
                <span asp-validation-for="CurrentWeight" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Goal" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Goal" class="form-control" />
                <span asp-validation-for="Goal" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WeeksForGoal" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="WeeksForGoal" class="form-control" />
                <span asp-validation-for="WeeksForGoal" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ">
            <label class="col-md-2 control-label">Upload image</label>
            <div class="col-md-6">
                <input type="file" name="ImageFile" />

            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
