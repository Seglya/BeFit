@model BeFit.Models.UserProfileViewModels.UserProfileViewModel

<header>
    <script >
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $("#img").attr("src", e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
</header>
<div class="container">
    <h2>@ViewData["Title"].</h2>
    <form asp-action="NewUser" asp-route-id="@ViewData["user"]" method="post" class="form-horizontal" enctype="multipart/form-data">
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SecondName" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="SecondName" class="form-control"/>
                <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <select asp-for="Sex" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input type="date" asp-for="DateOfBirth" class="form-control"/>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Height" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CurrentWeight" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="CurrentWeight" class="form-control"/>
                <span asp-validation-for="CurrentWeight" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Goal" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Goal" class="form-control"/>
                <span asp-validation-for="Goal" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WeeksForGoal" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="WeeksForGoal" class="form-control"/>
                <span asp-validation-for="WeeksForGoal" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ">
            <label class="col-md-2 control-label">Upload image</label>
            <div class="col-md-6">
                <img id="img" src="@Url.Content(Model.ImagePath)" height="100px" alt="photo"/>
                <input type="file" name="IFile" onchange="readURL(this);"/>
                <span asp-validation-for="IFile" class="text-danger"></span>

            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Save" class="btn btn-default"/>|
                <a asp-action="Profile" >To Profile</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}