@model IEnumerable<OneDayWorkout>
@{
    ViewData["Title"] = "Workouts";
}

<div class="container">
  <hr />
    <table class="table">
        <thead>
        <tr>
            <th>
                <label>Date</label>
            </th>
            <th>
                <label>Cardio</label>
            </th>
            <th>
                <label>Duration</label>
            </th>
            <th>
                <label>Streinght workout</label>
            </th>
                
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Date
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Cardio.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @if (item.Workout != null)
                    {
                        <dir >+</dir>
                    }
                    else
                    {
                        <dir>-</dir>
                    }
                </td>
                  
                <td>
                    <a asp-action="Detail" asp-route-oneDayWorkoutId="@item.OneDayWorkoutID">Detail</a>
                    <a asp-action="Create" asp-route-id="@item.AppUserID" asp-route-oneDayWorkoutId="@item.OneDayWorkoutID">Edit</a>

                </td>

            </tr>

        }


    </table>
    <br/>
    <a class="btn btn-default" asp-action="Create" asp-route-id="@ViewData["user"]">Add new</a>|
    <a asp-controller="UserProfile" asp-action="Profile" class="btn btn-grey">Back to Profile</a>
    <br/>
    <br/>
    <br />
    <br />
</div>
